<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 10vw;
		font-weight: 800;
		line-height: 1.25;
		margin: 0;
		margin-bottom: 1.5rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.subtitle {
		/* line-height: 1.6; */
		margin: 0.5rem 0;
		/* outline: 2px solid rgba(var(--accent), 25%); */
		/* color: hsl(262, 83%, 65%); */
		color: white;
		text-shadow: hsla(0, 0%, 0%, 75%) 1px 0 10px, hsla(0, 0%, 0%, 90%) -1px 0 5px;
		/* background-color: white; */
		background: var(--accent-gradient_full) no-repeat center center fixed;
		padding: 1rem;
		font-size: 3vw;
		font-weight: 500;
		letter-spacing: 1.2px;
		font-style: italic;
		border-radius: 0.5rem;
		text-align: center;
		-webkit-transition: all 1s ease-out;
		-moz-transition: all 1s ease-out;
		-o-transition: all 1s ease-out;
		-ms-transition: all 1s ease-out;
		transition: all 1s ease-out;
	}
	.subtitle:hover {
		/* color: hsl(0, 0%, 5%); */
		text-shadow: white 1px 0 10px, white -1px 0 5px;
	}
	.link-card-grid {
		display: grid;
		/* grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr)); */
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
		padding: 0;
	}

	@media (max-width: 400px) {
		.link-card-grid {
			grid-template-columns: 1fr;
		}
	}

	.contact_link a {
		text-decoration: none;
		color: rgb(var(--accent))
	}
</style>
